<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8sp"
    android:layout_marginStart="8sp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10sp">

    <ImageView
        android:id="@+id/iv_dashboard_item_image"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/plane_background"
        android:scaleType="fitXY"
        android:src="@drawable/plane_background" />
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/iv_dashboard_item_image"
        android:background="@color/white"
        />

    <LinearLayout
        android:id="@+id/ll_dashboard_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_divider"
        android:orientation="vertical"
        android:padding="10sp">

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_dashboard_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Name" />

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_dashboard_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="#DF8336"
            android:textSize="15sp"
            tools:text="100" />
    </LinearLayout>
</RelativeLayout>