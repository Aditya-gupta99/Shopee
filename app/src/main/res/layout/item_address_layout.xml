<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12sp"
    android:layout_marginStart="8sp"
    android:layout_marginEnd="8sp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="16sp"
    android:paddingTop="10sp"
    android:paddingEnd="16sp"
    android:paddingBottom="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_address_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Aditya kasaudhon" />

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DF8336"
            android:paddingStart="10sp"
            android:paddingTop="4sp"
            android:paddingEnd="10sp"
            android:paddingBottom="4sp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Home" />
    </LinearLayout>

    <com.sparklead.shopee.utils.ShopeeTextView
        android:id="@+id/tv_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="#3A3838"
        android:textSize="18sp"
        tools:text="xyz" />

    <com.sparklead.shopee.utils.ShopeeTextView
        android:id="@+id/tv_address_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="#656464"
        android:textSize="14sp"
        tools:text="+64 123456789" />
</LinearLayout>