<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plane_background"
    tools:context=".ui.activities.RegisterActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register_activity"
        android:layout_width="match_parent"
        android:layout_marginBottom="25sp"
        android:background="#DF8336"
        android:layout_height="?attr/actionBarSize">

        <com.sparklead.shopee.utils.ShopeeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Create An Account"
            android:padding="7sp"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textAlignment="center" />

    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#DF8336"
        android:textColorHint="#DF8336"
        app:boxStrokeColor="#DF8336"

        app:hintTextColor="#DF8336">

        <com.sparklead.shopee.utils.ShopeeEditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="16sp"
            android:layout_marginBottom="20sp"
            android:imeOptions="actionGo"
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/cursor_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_last_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#DF8336"
        android:textColorHint="#DF8336"
        app:boxStrokeColor="#DF8336"
        app:hintTextColor="#DF8336">

        <com.sparklead.shopee.utils.ShopeeEditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginBottom="20sp"
            android:textSize="16sp"
            android:imeOptions="actionGo"
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/cursor_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email_reg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#DF8336"
        android:textColorHint="#DF8336"
        android:layout_marginBottom="20sp"
        app:boxStrokeColor="#DF8336"
        app:hintTextColor="#DF8336">

        <com.sparklead.shopee.utils.ShopeeEditText
            android:id="@+id/et_email_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="16sp"
            android:imeOptions="actionGo"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/cursor_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_reg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#DF8336"
        android:textColorHint="#DF8336"
        app:boxStrokeColor="#DF8336"
        app:hintTextColor="#DF8336">

        <com.sparklead.shopee.utils.ShopeeEditText
            android:id="@+id/et_password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginBottom="20sp"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_confirm_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#DF8336"
        android:textColorHint="#DF8336"
        app:boxStrokeColor="#DF8336"
        app:hintTextColor="#DF8336">

        <com.sparklead.shopee.utils.ShopeeEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_marginBottom="20sp"
            android:textSize="16sp"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_terms_and_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#DF8336"
            android:checked="false"/>

        <com.sparklead.shopee.utils.ShopeeTextView
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="I Agree To The"/>

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_register_terms"
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/term_amp_condition"
            android:textAllCaps="false"
            android:textColor="#DF8336"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/button_background"
        android:textSize="20sp"
        android:padding="10sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="15sp"
        />

    <LinearLayout
        android:id="@+id/linearLayout_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Submit"
        app:layout_constraintVertical_bias="0.100000024">

        <com.sparklead.shopee.utils.ShopeeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="Already have an account ? "
            android:textAlignment="textEnd"

            android:textSize="18sp" />

        <com.sparklead.shopee.utils.ShopeeTextView
            android:id="@+id/tv_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:foreground="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:textColor="#DF8336"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>